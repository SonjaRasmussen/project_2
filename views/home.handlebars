<main class="no-padding no-pad-top taskmain">

  <div class="container start-splash-container row">
    <div class="row">
        <div class="col s6 tasklist">To Do</div>
        <div class="col s6 tasklist">Completed!</div>
      </div>
    </div>
    <div class="row">
      <div class="col s6 tasklist">
        <ul id="todo_list">
        {{#each todos}}
          <li><form method="post" action="/task-complete/{{id}}"><button type="submit">Complete</button>{{task}}</form></li>
        {{/each}}
        </ul>
      </div>
      <div class="col s6 tasklist">
        <ul id="completed_list">
        {{#each completed}}
          <li>{{task}}</li>
        {{/each}}
        </ul>
      </div>
    </div>
  </div>
  
  <div class="container start-splash-container row">
    <div class="col s12 center-align">
      <h5 class="createtasks red lighten-4">Complete 6 tasks and choose from these great prizes!</h5>
        <div class="row">
          <div class="col m4 s12 prizes">
            Bowl of Ice Cream
          </div>
          <div class="col m4 s12 prizes">
            One hour of TV or video games
          </div>
          <div class="col m4 s12 prizes">
            Ride bike for an hour
          </div>
        </div>
        <div class="row">
          <div class="col m4 s12 prizes">
            Go to the playground
          </div>
          <div class="col m4 s12 prizes">
            Visit the Science Museum
          </div>
          <div class="col m4 s12 prizes">
            Sit outside and play with sticks
          </div>
        </div>
    </div>
  </div>
    
</main>

<script type="text/javascript" src="assets/js/materialize.min.js"></script>
  <script>
    $(document).ready(function() {
        $(".sidenav").sidenav();
    });
  </script>