<div class="container start-splash-container row">
  <div class="createtasks">Parents! Create a New Task for your kids!
  </div>

</div>

<div class="row">
  <div class="col s12">
    <form action="/task" method="POST">
      <input type="text" class="main-font" name="task_name" placeholder="A New Task">
      <button type="submit" class="addTaskButton">Add The Task</button>
    </form>
  </div>
</div>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each tasks}}
          {{#unless this.completed}}
            <div>
              <form action="/task/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='newTask'> {{this.task_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each tasks}}
          {{#if this.completed}}
            <div class='taskCompleted'>
              <div>
                {{this.task_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>

<div class="container start-splash-container row">
  <div class="row">
    <div class="col s12 tasklist">
      <ul id="todo_list">
        <div class="taskstocomplete">Getchya child to complete this shit</div>
      {{#each todos}}
        <div id="container-button">
          <li>
            {{task}}
            <br>
            <form method="post" action="/task-delete/{{id}}" data-id="{{id}}" class='delete-form'>
              <button type="submit" class="buttons">Delete</button>
            </form>
          </li>
        </div>
      {{/each}}
      </ul>
    </div>
  </div>
</div>
</main>

<script>
 $(() => {
   $('.delete-form').on("submit", function(e) {
    e.preventDefault();

    let id = $(this).data('id');

    $.post('/task-delete/' + id, function(response) {
      window.location.reload();
    });

  });
 })
  

</script>
